#!/bin/env bash
#require("../index.js")
SOURCE="$0"
while [ -h "$SOURCE"  ]; do # resolve $SOURCE until the file is no longer a symlink
    DIR="$( cd -P "$( dirname "$SOURCE"  )" && pwd  )"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /*  ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
DIR="$( cd -P "$( dirname "$SOURCE"  )" && pwd  )"
echo $*
node $DIR/../index.js $*
Dura=$?
#echo $Dura
if [ $Dura -eq 0 ];then
  #echo "时间参数 不正确"
  exit
fi
ffmpeg -loop 1 -i bgBar.png -c:v libx264 -t $Dura -pix_fmt yuv420p  bgBar.mp4
ffmpeg -i bgBar.mp4  -i processBar.png -filter_complex "[1:v]format=argb,colorchannelmixer=aa=0.8[zork];[0][zork]overlay=t/$Dura*w-w:0" -codec:a copy out.mp4


